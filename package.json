{
  "name": "typethings",
  "author": "@pheralb_",
  "type": "module",
  "description": "A beautiful, minimal, and fast text editor built with Tauri.",
  "private": true,
  "packageManager": "npm@8.5.0",
  "workspaces": [
    "app",
    "website",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "gen-icon": "cd app/src-tauri && cargo tauri icon app/public/images/logo.svg"
  },
  "devDependencies": {
    "@turbo/gen": "1.10.12",
    "eslint": "8.47.0",
    "prettier": "3.0.2",
    "prettier-plugin-tailwindcss": "0.5.3",
    "turbo": "latest"
  }
}

{
  "name": "@typethings/editor",
  "author": "@pheralb_",
  "description": "A WYSIWYG markdown editor built with React, Tailwind CSS & Tiptap",
  "version": "0.1.0",
  "license": "MIT",
  "sideEffects": [
    "**/*.css"
  ],
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "typings": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "exports": {
    ".": "./dist",
    "./styles.css": "./dist/index.css"
  },
  "scripts": {
    "build": "tsup",
    "lint": "eslint src/",
    "dev": "tsup --watch",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@radix-ui/react-tooltip": "1.0.7",
    "@tiptap/extension-color": "2.1.7",
    "@tiptap/extension-link": "2.1.11",
    "@tiptap/extension-text-style": "2.1.7",
    "@tiptap/pm": "2.1.7",
    "@tiptap/react": "2.1.7",
    "@tiptap/starter-kit": "2.1.7",
    "clsx": "2.0.0",
    "lucide-react": "0.271.0",
    "tailwind-merge": "1.14.0",
    "tiptap-markdown": "0.8.2"
  },
  "devDependencies": {
    "postcss": "^8.4.20",
    "react": "18.2.0",
    "tsup": "7.2.0",
    "typescript": "5.1.6"
  },
  "peerDependencies": {
    "react": "^18.2.0"
  }
}
